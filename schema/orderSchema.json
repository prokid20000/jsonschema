{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://shipit.com/order.schema.json",
    "title": "Order",
    "description": "Order for an shipment.",
    "type": "object",
    "properties": {
      "productId": {
          "type": "integer",
          "minimum": 1000
        },
      "name": {"type": "string"},
      "addr": {"type": "string"},
      "zip": {"type": "string"}
    },
    "additionalProperties": false,
    "required": [
      "productId",
      "name",
      "addr",
      "zipcode"
    ]
  }

